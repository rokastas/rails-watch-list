<div class="navbar bg-light">
  <div class="navbar-brand mx-3"><%= link_to "🍿", lists_path %></div>
  <div class="d-flex align-items-center">
    <div class="nav-item">My lists</div>
    <div class="nav-item mx-3"><%= link_to "New list", new_list_path %></div>
  </div>
</div>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?q=80&w=1000&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NHx8bW92aWUlMjB0aGVhdGVyfGVufDB8fDB8fHww);">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container my-4">
  <button class="btn btn-success"><%= link_to "add a movie", new_list_bookmark_path(@list) %></button>
</div>

<div class="my-4 mx-5">
  <div class="row row-cols-1 row-cols-md-4">
    <% @bookmarks.each do |bookmark| %>
      <% movie = bookmark.movie %>
        <div class="col d-flex justify-content-center">
          <div class="card mb-4" style="width: 18rem;">
            <img src="<%= movie.poster_url %>" class="card-img-top" alt="...">
            <div class="card-body">
              <div class="d-flex align-self-baseline justify-content-between">
                <h5 class="card-title m-0"><strong><%= movie.title %></strong></h5>
                <div><%= movie.rating %></div>
              </div>
              <div class="d-flex flex-column align-content-between flex-grow-1">
                <p class="card-text mt-2"><%= movie.overview %></p>
                <div><%= bookmark.comment %></div>
              </div>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
