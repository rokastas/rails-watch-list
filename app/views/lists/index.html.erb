<div class="navbar bg-light">
  <div class="navbar-brand mx-3"><%= link_to "🍿", lists_path %></div>
  <div class="d-flex align-items-center">
    <div class="nav-item mx-3"><%= link_to "New list", new_list_path %></div>
  </div>
</div>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?q=80&w=1000&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NHx8bW92aWUlMjB0aGVhdGVyfGVufDB8fDB8fHww);">
  <div class="container">
    <h1>Save any kind of movies</h1>
    <p>Do it</p>
  </div>
</div>

<div class="container my-4">
  <div class="row row-cols-1 row-cols-md-3">
    <% @lists.each do |list| %>
      <%= link_to list do %>
        <div class="col mb-4">
            <%# <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?q=80&w=1000&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NHx8bW92aWUlMjB0aGVhdGVyfGVufDB8fDB8fHww);"> %>
            <div class="list-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%=
              if list.photo.attached?
                cl_image_path list.photo.key, height: 300, crop: :fill
              else
                'https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?q=80&w=1000&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NHx8bW92aWUlMjB0aGVhdGVyfGVufDB8fDB8fHww'
              end
            %>')">
              <div class="link"><%= list.name %></div>
            </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
